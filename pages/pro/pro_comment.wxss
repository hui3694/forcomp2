.header{
  margin-top: 8px;
  margin-bottom: 15px;
  background: #fff;
}
.header .item{
  width: 50%;
  float: left;
  text-align: center;
}
.header .item.on{
  background: #179B16;
  color: #fff;
  border-radius: 5px;
}
.header .item navigator{
  display: block;
  line-height: 36px;
}

.list .item{
  background: #fff;
  margin-bottom: 5px;
  padding: 10px 12px;
}
.list .item>view{
  margin-bottom: 2px;
}
.list .item .hd{
  width: 50px;
  display: inline-block;
  font-size: 14px;
  color: #999;
}
.list .item .bd{
  font-size: 14px;
}
