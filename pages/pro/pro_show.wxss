/* pages/pro/pro_show.wxss */
@import "/wxParse/wxParse.wxss";
page{
  
}
.header{
  background: #fff;
  padding:12px 0;
  border-bottom: 1px solid #ccc;
}
.header .n_title{
  font-size: 16px;
  margin-left: 14px;
  margin-bottom: 10px;
}
.header .time{
  margin-left: 14px;
  font-size: 14px;
  color: #999;
}
.header .pm_tel{
  width: 50%;
  float: right;
  text-align: right;
  color: #333;
  padding-right: 20px;
}
.header .pm_tel text{
  color: #2A72C5;
}

.cont{
  background: #fff;
  padding: 20px;
}

.collect{
  margin-top:20px;
}
.collect button{
  line-height: 36px;
  background: #179B16;
  color: #fff;
}
.collect.on button{
  background: #eee;
  color: #333;
}

.comment{
  margin-top: 8px;
  background: #fff;
}
.comment .com_title{
  line-height: 36px;
  padding: 0 10px;
  font-size: 14px;
}
.comment .com_title .submit{
  float: right;
  padding: 0 12px;
}
.comment .list{
  
}
.comment .list .item{
  border-top: 1px solid #ccc;
  padding: 8px 10px;
}
.comment .list .item .left{
  width: 36px;
  float: left;
}
.comment .list .item .left image{
  width: 100%;
}
.comment .list .item .right{
  margin-left: 45px;
}
.comment .list .item .right .name{
  line-height: 28px;
}
.comment .list .item .right .time{
  float: right;
  font-size: 13px;
  color: #999;
  line-height: 28px;
}
.comment .list .item .right .txt{
  font-size: 14px;
}

.post{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.post .bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.3);
}
.post form{
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #fff;
}
.post textarea{
  padding: 10px;
}