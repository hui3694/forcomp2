<!--pages/ucenter/pm.wxml-->
<form bindsubmit='formPost'>
  <view class='list'>
    <view class='item'>
      <view class='hd'>姓名</view>
      <view class='bd'>
        <input class='ipt' name='title'></input>
      </view>
    </view>
    <view class='item'>
      <view class='hd'>生日</view>
      <view class='bd'>
        <picker mode="date" value="" start="1950-1-1" bindchange="bindBirthday">
          <view class="picker">{{birthday}}</view>
        </picker>
      </view>
    </view>
    <view class='item'>
      <view class='hd'>
        <text class='lbl'>性别</text>
      </view>
      <view class='bd'>
        <radio-group class='rad' name='sex'>
          <label><radio value='1' checked='{{user.sex==1?"true":""}}' />男</label>
          <label><radio value='2' checked='{{user.sex==2?"true":""}}' />女</label>
        </radio-group>
      </view>
    </view>
    <view class='item'>
      <view class='hd'>籍贯</view>
      <view class='bd'>
        <input class='ipt' name='title'></input>
      </view>
    </view>
    <view class='item'>
      <view class='hd'>电话</view>
      <view class='bd'>
        <input class='ipt' name='title'></input>
      </view>
    </view>
    <view class='item'>
      <view class='hd'>公司名称</view>
      <view class='bd'>
        <input class='ipt' name='title'></input>
      </view>
    </view>
    <view class='item'>
      <view class='hd'>岗位</view>
      <view class='bd'>
        <input class='ipt' name='title'></input>
      </view>
    </view>
    <view class='item'>
      <view class='hd'>入职年份</view>
      <view class='bd'>
         <picker mode="date" fields="year" value="" start="1950" end="2018" bindchange="bindTimeChange">
          <view class="picker">{{year}}</view>
        </picker>
      </view>
    </view>


  </view>

  <view class='submit'>
    <button form-type='submit'>发布</button>
  </view>
</form>