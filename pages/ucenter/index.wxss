/* pages/ucenter/index.wxss */
.header{
  background: #fff;
  padding: 15px 12px;
}
.header .info{
  background-image: url('http://forcomp.huiguoguo.com/bg1.png');
  background-size: 100% auto;
  background-repeat: repeat-y;
  padding: 20px 12px;
  border-radius: 5px;
  height: 70px;
}
.header .info .img{
  width: 65px;
  float: left;
}
.header .info .img image{
  border-radius: 50%;
  width: 100%;
}
.header .info .left{
  float: left;
  color: #fff;
  margin-left: 12px;
}
.header .info .left view{
  line-height: 1.8em;
}
.header .info .left .name{
  font-size: 18px;
}
.header .info .left .tel{
  font-size: 14px;
}
.header .info .right{
  float: right;
}
.header .info .right navigator{
  line-height: 65px;
  font-size: 16px;
  color: #fff;
  padding-right: 12px;
  background: url('http://forcomp.huiguoguo.com/icon5.png') right center no-repeat;
  background-size: auto 15px;
}

.menu{
  
}
.menu .item{
  background: #fff;
  float: left;
  width: 33%;
  height: 95px;
  text-align: center;
  margin-top: 8px;
  border-right: 1px solid #e6e6e6;
  position: relative;
  overflow: hidden;
}
.menu .item>navigator{
  padding: 18px 0;
}
.menu .item>view{
  padding: 18px 0;
}
.menu .item .btnShare{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: none;
  border: 0;
}
.menu .item image{
  max-width: 37px;
  max-height: 29px;
  margin-bottom: 5px;
}

.btn-area{
  margin: 0 20px;
  margin-top: 200px;
}
.menu .item.qd{
  position: relative;
}
.menu .item.qd .qd_img{
  position: absolute;
  width: 40px;
  top: 8px;
  right: 0;
}