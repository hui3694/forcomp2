/* pages/ucenter/pm.wxss */
.list{
  background: #fff;
}
.list .item{
  margin: 0 10px;
  line-height: 38px;
  border-bottom: 1px solid #eee;
}
.list .item .hd{
  width: 80px;
  float: left;
  line-height: 38px;
}
.list .item .hd label{
  font-size: 14px;
}
.list .item .bd{
  margin-left:90px; 
}
.list .item .bd .ipt{
  line-height: 38px;
  height: 38px;
  font-size: 14px;
}
.list .item .bd .rad label{
  margin-right: 15px;
  font-size: 14px;
}
.list .item .bd picker{
  line-height: 38px;
  height: 38px;
}
.list .item .bd picker view{
  width: 100%;
}
.list .item .area textarea{
  padding: 10px;
  line-height: inherit;
  font-size: 14px;
}


.submit{
  margin: 0 auto;
  margin-top: 30px;
  width: 85%;
}
.submit button{
  background:#1aad19;
  color: #fff;
  line-height: 38px;
  font-size: 16px;
}


.image-plus {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx solid #D9D9D9;
  position: relative;
}
.image-plus-nb{
  border: 1px solid #D9D9D9;
}
.image-plus-nb .image{
  width: 100%;
  height: 100%;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}

.tip{
  padding-top: 200px;
  text-align: center;
}
.tip .txt{
  font-size: 20px;
}
.tip navigator{
  display: block;
  width: 85%;
  margin: 0 auto;
  background:#1aad19;
  color: #fff;
  line-height: 38px;
  font-size: 16px;
  border-radius: 3px;
  margin-top: 30px;
}