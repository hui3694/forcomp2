/* pages/pro/pm_assess.wxss */
.header{
  background: #fff;
  padding: 20px 10px;
}
.header .img{
  float: left;
  width: 68px;
  margin-right: 15px;
}
.header .img image{
  width: 100%;
}
.header .txt{
  float: left;
}
.header .txt .name{
  font-size: 18px;
  margin-bottom: 5px;
}
.header .txt .start{
  overflow: auto;
}
.header .txt .start .sta{
  float: left;
}
.header .txt .start text{
  margin-left: 10px;
  font-size: 14px;
}
.header .txt .start image{
  width: 18px;
}
.header .call{
  float: right;
  width: 40px;
  padding-right: 20px;
}
.header .call image{
  width: 100%;
  margin-top: 15px;
}

.assess{
  margin-top: 60px;
}

.assess .remark{
  text-align: center;
  font-size: 16px;
  margin-bottom: 20px;
}
.assess .imgs{
  text-align: center;
}
.assess .imgs .item{
  display: inline-block;
  margin: 0 5px;
}
.assess .imgs .item image{
  width: 48px;
}
.assess .submit{
  margin: 0 10%;
  margin-top: 15px;
  line-height: 36px;
  font-size: 18px;
  background: #1aad19;
  color: #fff;
  margin-top: 10px;
}